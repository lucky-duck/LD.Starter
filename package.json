{
  "name": "ld.starter",
  "version": "1.0.0",
  "description": "A non-SPA website boilerplate",
  "scripts": {
    "start": "gulp",
    "build": "cross-env NODE_ENV=production gulp production",
    "zip": "cross-env NODE_ENV=production gulp zip",
    "format": "pretty-quick --staged",
    "lint:css": "stylelint \"src/**/*.{scss,sass}\"",
    "lint:js": "eslint --max-warnings 0 \"src/**/*.{jsx,js}\"",
    "validate": "npm-run-all --parallel format lint:css lint:js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run validate"
    }
  },
  "dependencies": {
