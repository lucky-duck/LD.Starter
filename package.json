    "@babel/register": "^7.12.1",
    "ansi-colors": "^4.1.1",
    "assets": "^3.0.1",
    "autoprefixer": "^10.0.1",
    "babel-loader": "^8.1.0",
    "babel-plugin-module-resolver": "^4.0.0",
    "cross-env": "^7.0.2",
    "del": "^5.1.0",
    "fancy-log": "^1.3.3",
    "global": "^4.4.0",
    "gulp": "^4.0.2",
    "gulp-clean-css": "^4.3.0",
    "gulp-if": "^3.0.0",
    "gulp-imagemin": "^7.1.0",
    "gulp-jsbeautifier": "^3.0.1",
