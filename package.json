    "babel-eslint": "^10.1.0",
    "browser-sync": "^2.26.13",
    "eslint": "^7.12.1",
    "eslint-config-gsap": "^3.0.0",
    "eslint-loader": "^4.0.2",
    "gulp-sourcemaps": "^2.6.5",
    "gulp-watch": "^5.0.1",
    "husky": "^4.3.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.1.2",
    "pretty-quick": "^3.1.0",
    "stylelint": "^13.7.2",
    "stylelint-config-recommended": "^3.0.0"
